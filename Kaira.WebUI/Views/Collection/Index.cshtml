@model IEnumerable<ResultCollectionDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<h3>Koleksiyonlar</h3>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Görsel Url</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.ImageUrl</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>
                <a href="/Collection/UpdateCollection/@item.CollectionId" class="btn btn-primary btn-sm">Düzenle</a>
                <a href="/Collection/DeleteCollection/@item.CollectionId" class="btn btn-danger btn-sm">Sil</a>
            </td>
        </tr>
    }
</table>

<a href="/Collection/CreateCollection" class="btn btn-success">Yeni Koleksiyon Ekle</a>

