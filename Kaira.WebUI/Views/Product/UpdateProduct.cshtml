@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ürün Güncelle</h1>

<form method="post">
    <input type="hidden" asp-for="ProductId"/>
    <label>Ürün Adı</label>
    <input type="text" asp-for="Name" class="form-control" required />
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" required />
    <br />
    <label>Görsel</label>
    <input type="text" asp-for="ImageUrl" class="form-control" required />
    <br />
    <label>Fiyat</label>
    <input type="text" asp-for="Price" class="form-control" required />
    <br />
    <label>Kategori</label>
    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.categories" required ></select>
    <br />

    <button class="btn btn-primary">Kaydet</button>
</form>
