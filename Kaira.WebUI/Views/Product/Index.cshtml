@model IEnumerable<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<h3>Ürünler</h3>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ürün Adı</th>
        <th>Açıklama</th>
        <th>Fiyat</th>
        <th>Kategori</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl" style="height:75px;width:75px" /></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Price ₺</td>
            <td>@item.CategoryName</td>
            <td>
                <a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a>
                <a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-info">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a href="/Product/CreateProduct" class="btn btn-primary">Yeni Ürün Oluştur</a>
