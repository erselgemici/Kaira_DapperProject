@using Kaira.WebUI.DTOs.FeatureDtos
@*
    Section FeatureList
*@
<section class="features py-5">
    <div class="container">
        <div class="row">
            @{
                int delay = 0;
            }

            @foreach (var item in Model)
            {
                <div class="col-md-3 text-center" data-aos="fade-in" data-aos-delay="@delay">
                    <div class="py-5">
                        <svg width="38" height="38" viewBox="0 0 24 24">
                                <use xlink:href="#@item.IconSvg"></use>
                        </svg>
                        <h4 class="element-title text-capitalize my-3">@item.Title</h4>
                        <p>@item.Description</p>
                    </div>
                </div>
                delay += 300;
            }
        </div>
    </div>
</section>
