@using Kaira.WebUI.DTOs.CategoryDtos
@model CreateCategoryDto

@{
    ViewData["Title"] = "Yeni Kategori";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Mağaza Yönetimi /</span> Yeni Kategori</h4>

    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Yeni Kategori Oluşturma Formu</h5>
                </div>
                <div class="card-body">
                    <form method="post">

                        <div class="mb-3">
                            <label class="form-label" for="categoryName">Kategori Adı</label>
                            <input type="text" class="form-control" asp-for="Name" id="categoryName" placeholder="Örn: Teknoloji" required />
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <span class="tf-icons bx bx-save"></span> Kaydet
                        </button>
                        <a href="/Admin/Category/Index" class="btn btn-outline-secondary">
                            <span class="tf-icons bx bx-arrow-back"></span> Vazgeç
                        </a>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
