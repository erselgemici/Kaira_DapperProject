@using Kaira.WebUI.DTOs.CategoryDtos
@model IEnumerable<ResultCategoryDto>

@{
    ViewData["Title"] = "Kategori Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Mağaza Yönetimi /</span> Kategoriler
    </h4>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Kategori Listesi</h5>
            <a href="/Admin/Category/CreateCategory" class="btn btn-primary">
                <span class="tf-icons bx bx-plus"></span>&nbsp; Yeni Kategori Ekle
            </a>
        </div>

        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kategori Adı</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td><strong>@count</strong></td>
                            <td>@item.Name</td>
                            <td>
                                <a href="/Admin/Category/UpdateCategory/@item.CategoryId" class="btn btn-sm btn-outline-info">
                                    <span class="tf-icons bx bx-edit-alt"></span> Güncelle
                                </a>
                                <a href="/Admin/Category/DeleteCategory/@item.CategoryId" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?');">
                                    <span class="tf-icons bx bx-trash"></span> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
