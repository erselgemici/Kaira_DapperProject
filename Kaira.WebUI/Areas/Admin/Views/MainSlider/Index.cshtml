@using Kaira.WebUI.DTOs.MainSliderDtos
@model IEnumerable<ResultMainSliderDto>

@{
    ViewData["Title"] = "Slider Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">İçerik Yönetimi /</span> Slider (Manşet)</h4>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Slider Listesi</h5>
            <a href="/Admin/MainSlider/CreateMainSlider" class="btn btn-primary">
                <span class="tf-icons bx bx-plus"></span>&nbsp; Yeni Slider Ekle
            </a>
        </div>

        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Görsel</th>
                        <th>Başlık</th>
                        <th>Açıklama</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td><strong>@count</strong></td>
                            <td>
                                <img src="@item.ImageUrl" alt="slider" width="100" class="rounded" style="height: 50px; object-fit: cover;" />
                            </td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-label-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-label-secondary">Pasif</span>
                                }
                            </td>
                            <td>
                                <a href="/Admin/MainSlider/UpdateMainSlider/@item.MainSliderId" class="btn btn-sm btn-outline-info">
                                    <span class="tf-icons bx bx-edit-alt"></span> Güncelle
                                </a>
                                <a href="/Admin/MainSlider/DeleteMainSlider/@item.MainSliderId" class="btn btn-sm btn-outline-danger" onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                    <span class="tf-icons bx bx-trash"></span> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
