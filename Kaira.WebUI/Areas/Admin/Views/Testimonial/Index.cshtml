@using Kaira.WebUI.DTOs.TestimonialDtos
@model IEnumerable<ResultTestimonialDto>

@{
    ViewData["Title"] = "Müşteri Yorumları";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Site Ayarları /</span> Müşteri Yorumları</h4>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Yorum Listesi</h5>
            <a href="/Admin/Testimonial/CreateTestimonial" class="btn btn-primary">
                <span class="tf-icons bx bx-plus"></span>&nbsp; Yeni Yorum Ekle
            </a>
        </div>

        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ad Soyad</th>
                        <th>Yorum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td><strong>@count</strong></td>
                            <td>@item.NameSurname</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Comment) && item.Comment.Length > 75)
                                {
                                    @item.Comment.Substring(0, 75) <text>...</text>
                                }
                                else
                                {
                                    @item.Comment
                                }
                            </td>
                            <td>
                                <a href="/Admin/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-sm btn-outline-info">
                                    <span class="tf-icons bx bx-edit-alt"></span> Güncelle
                                </a>
                                <a href="/Admin/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bu yorumu silmek istediğinize emin misiniz?');">
                                    <span class="tf-icons bx bx-trash"></span> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
