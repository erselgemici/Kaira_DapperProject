@using Kaira.WebUI.DTOs.ProductDtos
@model IEnumerable<ResultProductDto>

@{
    ViewData["Title"] = "Ürün Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Mağaza Yönetimi /</span> Ürünler</h4>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Ürün Listesi</h5>
            <a href="/Admin/Product/CreateProduct" class="btn btn-primary">
                <span class="tf-icons bx bx-plus"></span>&nbsp; Yeni Ürün Ekle
            </a>
        </div>

        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Görsel</th>
                        <th>Ürün Adı</th>
                        <th>Fiyat</th>
                        <th>Kategori</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td><strong>@count</strong></td>
                            <td>
                                <img src="@item.ImageUrl" alt="@item.Name" width="50" height="50" class="rounded-circle" style="object-fit:cover;" />
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Price ₺</td>
                            <td><span class="badge bg-label-primary me-1">@item.CategoryName</span></td>
                            <td>
                                <a href="/Admin/Product/UpdateProduct/@item.ProductId" class="btn btn-sm btn-outline-info">
                                    <span class="tf-icons bx bx-edit-alt"></span> Güncelle
                                </a>
                                <a href="/Admin/Product/DeleteProduct/@item.ProductId" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                                    <span class="tf-icons bx bx-trash"></span> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
