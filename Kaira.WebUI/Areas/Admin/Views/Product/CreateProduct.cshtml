@using Kaira.WebUI.DTOs.ProductDtos
@model CreateProductDto

@{
    ViewData["Title"] = "Yeni Ürün";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Mağaza Yönetimi /</span> Yeni Ürün</h4>

    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Yeni Ürün Ekleme Formu</h5>
                </div>
                <div class="card-body">
                    <form method="post">

                        <div class="mb-3">
                            <label class="form-label">Ürün Adı</label>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Örn: Yazlık Elbise" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Açıklama</label>
                            <textarea class="form-control" asp-for="Description" rows="3" placeholder="Ürün açıklaması..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Fiyat (₺)</label>
                            <input type="number" step="0.01" class="form-control" asp-for="Price" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Görsel URL</label>
                            <input type="text" class="form-control" asp-for="ImageUrl" placeholder="https://..." />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Kategori</label>
                            <select asp-for="CategoryId" class="form-select" asp-items="@ViewBag.categories">
                                <option value="">Bir kategori seçin...</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <span class="tf-icons bx bx-save"></span> Kaydet
                        </button>
                        <a href="/Admin/Product/Index" class="btn btn-outline-secondary">
                            <span class="tf-icons bx bx-arrow-back"></span> Vazgeç
                        </a>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
