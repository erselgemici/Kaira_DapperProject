@using Kaira.WebUI.DTOs.FeatureDtos
@model IEnumerable<ResultFeatureDto>

@{
    ViewData["Title"] = "Öne Çıkan Özellikler";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">İçerik Yönetimi /</span> Özellikler (Hizmetler)</h4>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Özellik Listesi</h5>
            <a href="/Admin/Feature/CreateFeature" class="btn btn-primary">
                <span class="tf-icons bx bx-plus"></span>&nbsp; Yeni Özellik Ekle
            </a>
        </div>

        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Açıklama</th>
                        <th>İkon Kodu</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td><strong>@count</strong></td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>
                                <span class="badge bg-label-secondary">@item.IconSvg</span>
                            </td>
                            <td>
                                <a href="/Admin/Feature/UpdateFeature/@item.FeatureId" class="btn btn-sm btn-outline-info">
                                    <span class="tf-icons bx bx-edit-alt"></span> Güncelle
                                </a>
                                <a href="/Admin/Feature/DeleteFeature/@item.FeatureId" class="btn btn-sm btn-outline-danger" onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                    <span class="tf-icons bx bx-trash"></span> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
