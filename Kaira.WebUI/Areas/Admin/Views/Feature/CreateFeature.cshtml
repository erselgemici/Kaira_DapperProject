@using Kaira.WebUI.DTOs.FeatureDtos
@model CreateFeatureDto

@{
    ViewData["Title"] = "Yeni Özellik Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">İçerik Yönetimi /</span> Yeni Özellik</h4>

    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Yeni Özellik Ekleme Formu</h5>
                </div>
                <div class="card-body">
                    <form method="post">

                        <div class="mb-3">
                            <label class="form-label">Başlık</label>
                            <input type="text" class="form-control" asp-for="Title" placeholder="Örn: Hızlı Teslimat" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Açıklama</label>
                            <input type="text" class="form-control" asp-for="Description" placeholder="Kısa bir açıklama..." required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">İkon (SVG veya FontAwesome Kodu)</label>
                            <input type="text" class="form-control" asp-for="IconSvg" placeholder='<i class="fa fa-truck"></i> veya SVG kodu' required />
                            <div class="form-text">Buraya FontAwesome sınıfını veya SVG kodunu yapıştırabilirsiniz.</div>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <span class="tf-icons bx bx-save"></span> Kaydet
                        </button>
                        <a href="/Admin/Feature/Index" class="btn btn-outline-secondary">
                            <span class="tf-icons bx bx-arrow-back"></span> Vazgeç
                        </a>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
