@using Kaira.WebUI.DTOs.PartnerDtos
@model IEnumerable<ResultPartnerDto>

@{
    ViewData["Title"] = "Markalar";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">İçerik Yönetimi /</span> Markalar</h4>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Marka Listesi</h5>
            <a href="/Admin/Partner/CreatePartner" class="btn btn-primary">
                <span class="tf-icons bx bx-plus"></span>&nbsp; Yeni Marka Ekle
            </a>
        </div>

        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Logo</th>
                        <th>Marka Adı</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td><strong>@count</strong></td>
                            <td>
                                <div class="p-2 bg-lighter rounded d-inline-block">
                                    <img src="@item.LogoUrl" alt="@item.PartnerName" height="30" style="object-fit: contain;" />
                                </div>
                            </td>
                            <td>@item.PartnerName</td>
                            <td>
                                <a href="/Admin/Partner/UpdatePartner/@item.PartnerId" class="btn btn-sm btn-outline-info">
                                    <span class="tf-icons bx bx-edit-alt"></span> Güncelle
                                </a>
                                <a href="/Admin/Partner/DeletePartner/@item.PartnerId" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bu markayı silmek istediğinize emin misiniz?');">
                                    <span class="tf-icons bx bx-trash"></span> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
